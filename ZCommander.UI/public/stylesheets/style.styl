.button
  display inline-block
  width 200px
  height 40px
  background-color #373737
  color #fff
  text-align center
  a
    display inline-block
    font-size 15px
    padding 10px
    text-decoration inherit
    color #fff
    &:active
      top 1px
      outline none
      -webkit-box-shadow none
      box-shadow none

.nav
  font-family site-fonts
  list-style none
  margin 0
  padding 0
  text-align center
  margin auto auto

/* Metro style forms */
form
  background main-color
  margin 0 auto
  padding 30px
  margin-top 50px
  width 310px
  color #fff
  font-family site-fonts
  font-size: 16px
  line-height 1.5em
  h2
    font-size 3em
    line-height 1em
    margin 0 0 0.5em
  label
    display block
    margin 0 0 5px
    cursor pointer
  input[type="checkbox"]
    -webkit-appearance none
    -ms-appearance none
    -moz-appearance none
    background none
    border 1px solid #fff
    outline none
    width 20px
    height 20px
    padding 0
    margin 0 10px 0 0
    border-radius 5px
    vertical-align middle
    display inline-block
    position relative
  input[type="checkbox"]:checked
    &:after
      display block
      content ''
      width 15px
      height 7px
      border-left 3px solid #fff
      border-bottom 3px solid #fff
      -webkit-transform rotate(-45deg)
      -moz-transform rotate(-45deg)
      -o-transform rotate(-45deg)
      -ms-transform rotate(-45deg)
      transform rotate(-45deg)
      position absolute
      left 3px
      top 0px

